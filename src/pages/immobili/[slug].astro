---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
	const immobili = await getCollection('immobili');
	return immobili.map((immobile) => ({
		params: { slug: immobile.slug },
		props: { immobile },
	}));
}

const { immobile } = Astro.props;
const { Content } = await immobile.render();
---

<Layout title={immobile.data.title} card>
	<article>
		<header>
			<h1>{immobile.data.title}</h1>
		</header>
		<div class="content">
			<Content />
		</div>
	</article>
</Layout>

<style>
	article {
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	header {
		position: sticky;
		top: 0;
		background: var(--white);
		padding: 2rem 2rem 1rem;
		z-index: 5;
		box-shadow: 0 1rem 1rem -0.5rem rgba(255, 255, 255, 1);
	}

	h1 {
		font-size: var(--font-size-2xl);
	}

	.content {
		padding: 1rem 2rem 2rem;
		flex: 1;
		overflow-y: auto;
	}

	.body {
		line-height: var(--line-height-loose);
	}

	.body :global(h2) {
		font-size: var(--font-size-xl);
		margin: 2rem 0 1rem;
	}

	.body :global(p) {
		margin-bottom: 1rem;
	}

	.body :global(img) {
		width: 100%;
		height: auto;
		border-radius: 0.5rem;
		margin: 1.5rem 0;
	}
</style>
