---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
	const immobili = await getCollection('immobili');
	return immobili.map((immobile) => ({
		params: { slug: immobile.slug },
		props: { immobile },
	}));
}

const { immobile } = Astro.props;
const { Content } = await immobile.render();
---

<Layout title={immobile.data.title} card>
	<article>
		<div class="content">
			<h1>{immobile.data.title}</h1>
			<div class="body">
				<Content />
			</div>
		</div>
	</article>
</Layout>

<style>
	article {
		min-height: 100%;
	}

	.content {
		padding: 2rem;
	}

	h1 {
		font-size: var(--font-size-2xl);
		margin-bottom: 1.5rem;
	}

	.body {
		line-height: var(--line-height-loose);
	}

	.body :global(h2) {
		font-size: var(--font-size-xl);
		margin: 2rem 0 1rem;
	}

	.body :global(p) {
		margin-bottom: 1rem;
	}

	.body :global(img) {
		width: 100%;
		height: auto;
		border-radius: 0.5rem;
		margin: 1.5rem 0;
	}
</style>
