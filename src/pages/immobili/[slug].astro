---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';

export async function getStaticPaths() {
	const immobili = await getCollection('immobili');
	return immobili.map((immobile) => ({
		params: { slug: immobile.slug },
		props: { immobile },
	}));
}

const { immobile } = Astro.props;
const { Content } = await immobile.render();
---

<Layout title={immobile.data.title}>
	<Card title={immobile.data.title}>
		<Content />
	</Card>
</Layout>
