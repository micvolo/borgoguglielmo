---
import { getEntry } from 'astro:content';
import { Image } from 'astro:assets';

const settings = await getEntry('settings', 'site');
const { siteName, logo, header } = settings.data;

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{png,jpg,jpeg,gif,svg,webp}');
const logoSrc = logo?.image && images[logo.image] ? (await images[logo.image]()).default : null;
---

<header style={`background: ${header?.background}; border-color: ${header?.borderColor}; color: ${header?.textColor}`}>
	<a href="/" class="brand">
		{logo?.show && logoSrc && (
			<Image class="logo" src={logoSrc} alt={logo.alt || ''} width={20} height={20} />
		)}
		<h1>{siteName}</h1>
	</a>
	<div class="shadow"></div>
</header>

<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		padding: 0.5rem 0.75rem;
		z-index: 10;
		border-bottom: 1px solid;
	}

	.brand {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
		color: inherit;
	}

	.logo {
		width: 20px;
		height: 20px;
	}

	h1 {
		font-size: var(--font-size-xl);
	}

	.shadow {
		position: absolute;
		left: 0;
		right: 0;
		top: 100%;
		height: 2rem;
		background: linear-gradient(to bottom, white, transparent);
		pointer-events: none;
	}
</style>
