---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="card-overlay" transition:name="overlay">
	<aside class="card" transition:name="card">
		<header class="card-header">
			<h1>{title}</h1>
			<a href="/" class="close" aria-label="Chiudi">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M18 6L6 18M6 6l12 12"/>
				</svg>
			</a>
		</header>
		<div class="card-content">
			<slot />
		</div>
	</aside>
</div>

<style is:global>
	@keyframes fadeIn {
		from { opacity: 0; }
		to { opacity: 1; }
	}

	@keyframes fadeOut {
		from { opacity: 1; }
		to { opacity: 0; }
	}

	::view-transition-old(card),
	::view-transition-old(overlay) {
		animation: fadeOut 300ms ease-out forwards;
	}

	::view-transition-new(card),
	::view-transition-new(overlay) {
		animation: fadeIn 300ms ease-out forwards;
	}
</style>

<style>
	.card-overlay {
		position: fixed;
		top: calc(2.5rem + 4rem);
		right: 4rem;
		bottom: 4rem;
		left: auto;
		z-index: 100;
		display: flex;
		justify-content: flex-end;
		pointer-events: none;
	}

	.card {
		position: relative;
		width: 45vw;
		max-width: 600px;
		height: 100%;
		background: var(--cream);
		color: var(--charcoal);
		overflow: hidden;
		pointer-events: auto;
		border-radius: 0.5rem;
		box-shadow: 0 0 5rem 4rem rgba(232, 228, 220, 0.95);
		display: flex;
		flex-direction: column;
	}

	.card-header {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1.5rem 2rem;
		background: var(--cream);
		flex-shrink: 0;
	}

	.card-header::after {
		content: '';
		position: absolute;
		left: 0;
		right: 0;
		top: 100%;
		height: 1.5rem;
		background: linear-gradient(to bottom, var(--cream), transparent);
		pointer-events: none;
		z-index: 1;
	}

	.card-header h1 {
		font-size: var(--font-size-xl);
		margin: 0;
	}

	.card-content {
		flex: 1;
		overflow-y: auto;
		padding: 2rem;
	}

	.card-content :global(h2) {
		font-size: var(--font-size-lg);
		margin: 2rem 0 1rem;
	}

	.card-content :global(h2:first-child) {
		margin-top: 0;
	}

	.card-content :global(p) {
		margin-bottom: 1rem;
		line-height: var(--line-height-loose);
	}

	.card-content :global(ul) {
		margin-bottom: 1rem;
		padding-left: 1.5rem;
	}

	.card-content :global(li) {
		margin-bottom: 0.5rem;
		line-height: var(--line-height-normal);
	}

	.card-content :global(img) {
		width: 100%;
		height: auto;
		border-radius: 0.5rem;
		margin: 1.5rem 0;
	}

	.close {
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--charcoal);
		transition: opacity 0.2s;
		flex-shrink: 0;
	}

	.close:hover {
		opacity: 0.6;
	}

	@media (max-width: 768px) {
		.card-overlay {
			top: calc(2.5rem + 2rem);
			right: 2rem;
			bottom: 2rem;
			left: auto;
		}

		.card {
			width: 100%;
			max-width: none;
		}
	}
</style>
